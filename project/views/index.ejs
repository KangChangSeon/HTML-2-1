      <!-- 상단 소개글, 히어로 이미지 -->
      <div class="top">
        <h1 class="top-heading">sunset</h1>
        <p class="top-body">오늘 있었던 기쁜 일들을 기록해보세요.🤭</p>
      </div>
      
      <img src="/img/sunset2.jpg" alt="sunsettest" class="hero-image" width="840" height="400">

      <!-- 최근 게시물 -->
      <section class="articles">
        <h2 class="articles-heading">최근 게시물</h2>
        <ul class="article-ul">
          <% data.forEach(post => { %>
            <li>
              <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
              </a>
            </li>
            <% }) %>
        </ul>
      </section>